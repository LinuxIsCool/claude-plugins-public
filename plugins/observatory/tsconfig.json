{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["bun-types"],
    "paths": {
      "@lib/*": ["../../../lib/*"]
    },
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "../../../lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
