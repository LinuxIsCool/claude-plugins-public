{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "docs-site",
    "tests",
    "tools",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    "playwright.config.ts",
    ".storybook",
    "scripts",
    "src/graphql",
    "src/lib/emergence",
    "src/lib/agents",
    "src/lib/extractors",
    "src/lib/ml",
    "src/lib/data-pipeline",
    "src/lib/perf",
    "src/lib/a11y",
    "src/types/utility-types.ts",
    "src/types/insight-types.ts",
    "src/types/query-types.ts",
    "src/types/api-types.ts",
    "vitest.config.ts",
    "src/components/visualization",
    "src/pipelines",
    "src/components/insights",
    "src/components/a11y",
    "src/components/query",
    "src/app/queries",
    "src/app/insights",
    "src/app/debug",
    "src/lib/recursive-improvement",
    "src/lib/prompts",
    "src/lib/debug",
    "src/types/kg-schema.ts",
    "src/types/index.ts",
    "src/data-processing",
    "src/components/debug",
    "src/components/EmergenceFeed.tsx",
    "src/lib/testing"
  ]
}
